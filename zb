local Emotes = game:GetService("ReplicatedStorage").Items.Emotes
local Swag = Emotes:FindFirstChild("SwagWalk") or Emotes:FindFirstChild("ZombieStride")

if Swag then
    -- 1. Cleanup and Rename
    local oldModule = Swag:FindFirstChild("EmoteModuleClassic")
    if oldModule then oldModule:Destroy() end
    Swag.Name = "SwagWalk"

    -- 2. Ensure Animation Container exists
    local container = Swag:FindFirstChild("AnimationClassic")
    if not container then
        container = Instance.new("Animation")
        container.Name = "AnimationClassic"
        container.Parent = Swag
    end

    -- 3. Extract IDs from A, B, and C
    local anims = {}
    local options = Swag:FindFirstChild("PossibleOptionsClassic")
    if options then
        for _, name in ipairs({"A", "B", "C"}) do
            local folder = options:FindFirstChild(name)
            local anim = folder and folder:FindFirstChildOfClass("Animation")
            if anim then 
                table.insert(anims, anim.AnimationId) 
            end
        end
    end

    -- 4. Global Sync Loop
    task.spawn(function()
        local interval = 2 -- Duration for each animation in seconds
        print("ABC Sync System: Active")
        
        while true do
            if #anims > 0 then
                -- Calculate index based on universal game time
                local timeClock = math.floor(workspace.DistributedGameTime / interval)
                local index = (timeClock % #anims) + 1
                
                -- Only update if the ID has changed to prevent flickering
                if container.AnimationId ~= anims[index] then
                    container.AnimationId = anims[index]
                end
            end
            task.wait(0.5) -- Poll frequently to ensure switch is on time
        end
    end)
    print("Success: SwagWalk sync initialized")
else
    warn("Error: Target folder not found in ReplicatedStorage")
end
